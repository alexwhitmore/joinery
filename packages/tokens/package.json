{
  "name": "@joinery/tokens",
  "version": "0.1.0",
  "description": "Design tokens for Joinery - semantic spacing, typography, and elevation",
  "type": "module",
  "main": "./dist/index.css",
  "exports": {
    ".": "./dist/index.css",
    "./spacing": "./dist/spacing.css",
